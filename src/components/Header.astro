---
import Logo from "./Logo.astro";
import InstagramIcon from "./icons/InstagramIcon.astro";
import WhatsappIcon from "./icons/WhatsappIcon.astro";
const { class: className } = Astro.props;
---

<header
    class={`flex items-center justify-between mx-10 md:px-10 px-2 border-x pt-5 ${className} *:intersect:motion-preset-fade`}
>
    <a href="/">
        <Logo />
    </a>
    <div class="flex items-center gap-9">
        <section class="md:flex items-center gap-4 hidden">
            <a class="" href="">
                <InstagramIcon class="w-7 h-7 fill-pumpkin" />
            </a>
            <a href="">
                <WhatsappIcon class="w-9 h-9 fill-pumpkin" />
            </a>
        </section>

        <button
            class="cursor-pointer bg-pumpkin border border-obsidian text-cream px-5 py-2 rounded-full"
        >
            Comprar
        </button>
    </div>
</header>
